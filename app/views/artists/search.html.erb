<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_tag(search_artists_path, method: :get, class: 'form-inline') do %>
        <div class="form-group">
          <%= text_field_tag :keyword, @keyword, class: 'form-control input-lg', placeholder: "キーワードを入力", size: 40 %>
        </div>
        <%= submit_tag 'アーティストを検索', class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>
<div class="result">
	<% if @resultArr %>
		<% @resultArr.each do |result| %>
				<%= render 'layouts/artist_card', artist: result %>
		<% end %>
		<%= paginate @resultArr %>
	<% end %>	
</div>
